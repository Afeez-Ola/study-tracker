# Study Tracker Environment Configuration
# Copy this file to .env and modify as needed

# Flask Configuration
FLASK_ENV=development
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_PATH=~/study_tracker.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24
DB_MAX_SESSIONS=10000

# Security Configuration
SECRET_KEY=your-secret-key-here-32-chars-minimum
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
AUTH_REQUIRED=false

# Monitoring Configuration
IDLE_THRESHOLD_SECONDS=3
ACTIVITY_CHECK_INTERVAL_MS=100
WEBSOCKET_ENABLED=true
ACTIVITY_LOG_RETENTION_DAYS=30